<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lytMain1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_border">

        <ImageView
            android:id="@+id/imgcategory"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            app:layout_constraintBottom_toTopOf="@id/txttitle"
            android:src="@drawable/ic_add_shopping_cart"
            app:layout_constraintEnd_toEndOf="@id/lytMain1"
            app:layout_constraintStart_toStartOf="@id/lytMain1"
            app:layout_constraintTop_toTopOf="@id/lytMain1" />

        <TextView
            android:id="@+id/txttitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/lytMain1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:minLines="2"
            android:text="Mobile"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@id/lytMain1"
            app:layout_constraintEnd_toEndOf="@id/lytMain1"
            app:layout_constraintTop_toBottomOf="@+id/imgcategory" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>